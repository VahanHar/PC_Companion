<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/field_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/subdocument_listview"
        android:layout_marginBottom="250dp"
        android:padding="50dp" />


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_back_arrow"
        android:clickable="true"
        android:onClick="onBackIconClick"
        />
    <Button
        android:id="@+id/add_button"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:background="@drawable/btn1"
        android:text="+"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        />

    <ListView
        android:id="@+id/subdocument_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subdocument_count_tv"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#37080B"
        android:layout_marginBottom="230dp"/>
    <Button
        android:id="@+id/add_to_list_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD TO COMPARISON LIST"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:textColor="@color/white"
        android:background="@drawable/btn1"
        android:textSize="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        />
    <Button
        android:id="@+id/compare_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/compare_button_label"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/btn1"
        android:textSize="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/delete_list_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="Delete List"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:onClick="onDeleteListButtonClick"
        android:background="@drawable/btn1"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>
