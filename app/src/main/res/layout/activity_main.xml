<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/comparison_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@drawable/my_button_background"
                android:onClick="openComparisonActivity"
                android:src="@drawable/comparison_icon"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/configuration_button"
                android:layout_marginBottom="100dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/my_button_background"
                android:onClick="openConfigurationActivity"
                android:src="@drawable/configuration_icon" />

        </FrameLayout>

    </LinearLayout>


    <Button
        android:text="@string/logout"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_logout"
        />
    <TextView
        android:id="@+id/user_details"
        android:text=""
        android:gravity="center"
        android:textColor="#346736"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
